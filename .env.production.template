# LnkSns Production Environment Configuration Template
# Copy this file to .env and configure with your production values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application debug mode (set to false for production)
APP_DEBUG = false

# Application environment (development/testing/production)
APP_ENV = production

# Application name
APP_NAME = lnksns

# Application URL (without trailing slash)
APP_URL = https://your-domain.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database type (mysql/postgres/sqlite)
TYPE = mysql

# MySQL database host
HOSTNAME = localhost

# Database name
DATABASE = lnksns

# Database username
USERNAME = lnksns_user

# Database password (use a strong password)
PASSWORD = your_secure_password_here

# Database port
HOSTPORT = 3306

# Database charset
CHARSET = utf8mb4

# Database prefix (optional)
PREFIX = lite_

# Debug database queries (set to false for production)
DEBUG = false

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Default timezone
[APP]
DEFAULT_TIMEZONE = Asia/Shanghai

# Session configuration
SESSION_DRIVER = file
SESSION_LIFETIME = 7200
SESSION_ENCRYPT = false
SESSION_PREFIX = "lite_"

# Cache configuration
CACHE_DRIVER = file
CACHE_PREFIX = "lite_"
CACHE_EXPIRE = 3600

# ===========================================
# LOG CONFIGURATION
# ===========================================

# Log level (emergency, alert, critical, error, warning, notice, info, debug)
LOG_LEVEL = info

# Log channel (file/database/syslog)
LOG_CHANNEL = file

# ===========================================
# MAIL CONFIGURATION (Optional)
# ===========================================

# Mail driver (smtp/mail/sendmail/driver)
MAIL_DRIVER = smtp

# SMTP server settings
MAIL_HOST = smtp.gmail.com
MAIL_PORT = 587
MAIL_USERNAME = your-email@gmail.com
MAIL_PASSWORD = your-app-password
MAIL_ENCRYPTION = tls

# From email settings
MAIL_FROM_ADDRESS = your-email@gmail.com
MAIL_FROM_NAME = LnkSns

# ===========================================
# JWT CONFIGURATION
# ===========================================

# JWT secret key (generate a strong secret)
JWT_SECRET = your_jwt_secret_key_here

# JWT algorithm (HS256/HS384/HS512/RS256/RS384/RS512)
JWT_ALGO = HS256

# JWT token expire time (in seconds)
JWT_EXPIRE = 7200

# ===========================================
# WECHAT CONFIGURATION (If using WeChat features)
# ===========================================

# WeChat AppID
WECHAT_APPID = your_wechat_appid

# WeChat AppSecret
WECHAT_APPSECRET = your_wechat_appsecret

# WeChat Token (for server validation)
WECHAT_TOKEN = your_wechat_token

# ===========================================
# THIRD-PARTY API KEYS (Configure as needed)
# ===========================================

# Aliyun OSS (for file storage)
ALIYUN_OSS_ACCESS_KEY_ID = your_access_key_id
ALIYUN_OSS_ACCESS_KEY_SECRET = your_access_key_secret
ALIYUN_OSS_BUCKET = your_oss_bucket
ALIYUN_OSS_ENDPOINT = oss-cn-hangzhou.aliyuncs.com

# Qiniu (alternative storage)
QINIU_ACCESS_KEY = your_qiniu_access_key
QINIU_SECRET_KEY = your_qiniu_secret_key
QINIU_BUCKET = your_qiniu_bucket
QINIU_DOMAIN = your_qiniu_domain

# SMS Service (for notifications)
SMS_ACCESS_KEY_ID = your_sms_access_key
SMS_ACCESS_KEY_SECRET = your_sms_secret
SMS_SIGN_NAME = your_sms_sign_name
SMS_TEMPLATE_CODE = your_sms_template_code

# ===========================================
# REDIS CONFIGURATION (Optional, for caching)
# ===========================================

# Redis host
REDIS_HOST = localhost

# Redis port
REDIS_PORT = 6379

# Redis password (if set)
REDIS_PASSWORD = 

# Redis database
REDIS_DATABASE = 0

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# CSRF token name
CSRF_TOKEN_NAME = __token__

# Allowed hosts (comma-separated)
ALLOWED_HOSTS = your-domain.com,www.your-domain.com

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS = https://your-domain.com

# ===========================================
# RATE LIMITING
# ===========================================

# API rate limit (requests per minute)
RATE_LIMIT = 60

# Login attempt limit
LOGIN_ATTEMPT_LIMIT = 5

# Login attempt lockout time (in minutes)
LOGIN_LOCKOUT_TIME = 15

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Maximum file upload size (in bytes, e.g., 5242880 = 5MB)
UPLOAD_MAX_SIZE = 10485760

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES = jpg,jpeg,png,gif,pdf,doc,docx

# Upload path
UPLOAD_PATH = /public/static/uploads

# ===========================================
# MONITORING AND ANALYTICS
# ===========================================

# Application monitoring (optional)
MONITORING_ENABLED = false
MONITORING_ENDPOINT = 

# Analytics tracking ID (optional)
ANALYTICS_ID = 

# ===========================================
# ADDITIONAL PRODUCTION SETTINGS
# ===========================================

# Session secure (set to true if using HTTPS)
SESSION_SECURE = true

# Session httponly
SESSION_HTTPONLY = true

# Session samesite (Strict/Lax/None)
SESSION_SAMESITE = Lax

# Enable HTTPS redirects
HTTPS_REDIRECT = true

# Force HTTPS
FORCE_HTTPS = true

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================

# Add any custom configuration here
# CUSTOM_CONFIG = your_custom_value

